<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_recycler"
        android:layout_width="340dp"
        android:layout_height="340dp"
        app:cardBackgroundColor="@color/green_custom"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_recylcer"
                android:layout_width="270dp"
                android:layout_height="180dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_recycler"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:singleLine="false"
                android:text="이 글은 예시입니다.fewfwefwfwefwewefwefweffewfwef"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/iv_recylcer"
                app:layout_constraintStart_toStartOf="@id/iv_recylcer"
                app:layout_constraintTop_toBottomOf="@id/iv_recylcer"
                app:layout_constraintBottom_toTopOf="@id/iv_comment_count"/>

            <ImageView
                android:id="@+id/iv_like_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_love_bubble_24"
                app:layout_constraintEnd_toEndOf="@id/iv_recylcer"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="324"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/iv_like_count"
                app:layout_constraintBottom_toBottomOf="@id/iv_like_count"
                app:layout_constraintTop_toTopOf="@id/iv_like_count"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/iv_comment_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_chat_bubble_24"
                app:layout_constraintEnd_toStartOf="@id/tv_like_count"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="324"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/iv_comment_count"
                app:layout_constraintBottom_toBottomOf="@id/iv_comment_count"
                app:layout_constraintTop_toTopOf="@id/iv_comment_count"
                android:layout_marginEnd="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>