<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layouts.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="168dp"
        android:layout_height="201dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_stnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:text="2016726000"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:text="/ 4.5"
        app:layout_constraintStart_toEndOf="@+id/tv_grade"
        app:layout_constraintTop_toBottomOf="@+id/tv_major" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="60dp"
        android:text="홍길동"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:text="4.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tv_major" />

    <TextView
        android:id="@+id/tv_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:text="소프트웨어학부"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tv_stnum" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="281dp"
        android:layout_height="210dp"
        android:layout_marginTop="36dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TableRow
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_span="2"
                android:gravity="center_horizontal"
                android:text="필수 이수 과목" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="이수 과목" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="미이수 과목" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="시스템소프트웨어" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="캡스톤및설계" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="고급프로그래밍" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_check"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="졸업 요건 여부 확인"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="#959595"
                android:gravity="center"
                android:text="사용자 정보"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FF959595"
                android:gravity="center"
                android:text="학점 조회"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>